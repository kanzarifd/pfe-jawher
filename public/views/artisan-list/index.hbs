<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>قائمة الحرفيين - TN M3allim</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .dataTables_wrapper .dataTables_filter { float: left; }
        .dataTables_wrapper .dataTables_length { float: right; }
        .dataTables_wrapper .dataTables_info { float: right; }
        .dataTables_wrapper .dataTables_paginate { float: left; }
    </style>
</head>

<body class="bg-slate-100 font-sans flex h-screen flex-col md:flex-row">
    {{> adminSidebar}}

    <main class="flex-1 p-4 md:p-8 mt-16 md:mt-0 overflow-auto">
        <!-- Header Section -->
        <div class="mb-6">
            <h2 class="text-3xl font-bold text-slate-800">قائمة الحرفيين</h2>
            <p class="text-slate-500 mt-2">إدارة وعرض جميع الحرفيين في النظام</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-yellow-50 rounded-full">
                        <i class="fas fa-tools text-yellow-500 text-xl"></i>
                    </div>
                    <div class="mr-4">
                        <h3 class="text-slate-500 text-sm">إجمالي الحرفيين</h3>
                        <p class="text-2xl font-bold text-slate-800">{{totalArtisans}}</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-green-50 rounded-full">
                        <i class="fas fa-user-plus text-green-500 text-xl"></i>
                    </div>
                    <div class="mr-4">
                        <h3 class="text-slate-500 text-sm">الحرفيين جدد</h3>
                        <p class="text-2xl font-bold text-slate-800">{{activeArtisans}}</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-blue-50 rounded-full">
                        <i class="fas fa-star text-blue-500 text-xl"></i>
                    </div>
                    <div class="mr-4">
                        <h3 class="text-slate-500 text-sm">متوسط التقييم</h3>
                        <p class="text-2xl font-bold text-slate-800">{{avgRating}}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add New User Modal -->
        <div id="addUserModal" class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden">
          <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
            <h3 class="text-xl font-semibold mb-4">إضافة مستخدم جديد</h3>
            <form id="addUserForm" class="space-y-4">
              <div>
                <label class="block mb-1">الاسم</label>
                <input type="text" name="nom" required class="w-full border rounded px-3 py-2">
              </div>
              <div>
                <label class="block mb-1">البريد الإلكتروني</label>
                <input type="email" name="email" required class="w-full border rounded px-3 py-2">
              </div>
              <div>
                <label class="block mb-1">كلمة المرور</label>
                <input type="password" name="mot_de_passe" required class="w-full border rounded px-3 py-2">
              </div>
              <div>
                <label class="block mb-1">الدور</label>
                <select name="rôle" required class="w-full border rounded px-3 py-2">
                  <option value="artisan">حرفي</option>
                </select>
              </div>
              <div class="flex justify-end gap-2">
                <button type="button" id="closeAddUserModal" class="px-4 py-2 rounded bg-gray-300">إلغاء</button>
                <button type="submit" class="px-4 py-2 rounded bg-yellow-500 text-white">إضافة</button>
              </div>
            </form>
            <div id="addUserError" class="text-red-600 mt-2 hidden"></div>
          </div>
        </div>

        <!-- Reviews Modal -->
        <div id="reviewsModal" class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden">
            <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-2xl max-h-[80vh] overflow-y-auto">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-xl font-semibold">التقييمات</h3>
                    <button id="closeReviewsModal" class="text-slate-500 hover:text-slate-700">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div id="reviewsList" class="space-y-4">
                    <!-- Reviews will be inserted here -->
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="bg-white rounded-lg shadow-sm">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6">
                    <div class="flex items-center gap-2">
                        <i class="fas fa-tools text-slate-400"></i>
                        <h3 class="text-lg font-semibold text-slate-800">جميع الحرفيين</h3>
                    </div>
                    <button id="openAddUserModal" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg flex items-center gap-2 transition-colors duration-200">
                        <i class="fas fa-plus"></i>
                        إضافة حرفي جديد
                    </button>
                </div>

                <div class="overflow-x-auto bg-white rounded-lg">
                    <table id="artisanTable" class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-slate-50">
                            <tr>
                                <th class="px-6 py-4 text-right text-sm font-semibold text-slate-600">الرقم</th>
                                <th class="px-6 py-4 text-right text-sm font-semibold text-slate-600">الاسم</th>
                                <th class="px-6 py-4 text-right text-sm font-semibold text-slate-600">البريد الإلكتروني</th>
                                <th class="px-6 py-4 text-right text-sm font-semibold text-slate-600">رقم الهاتف</th>
                                <th class="px-6 py-4 text-right text-sm font-semibold text-slate-600">العنوان</th>
                                <th class="px-6 py-4 text-right text-sm font-semibold text-slate-600">الإجراءات</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
          $('#openAddUserModal').on('click', function() {
            $('#addUserModal').removeClass('hidden');
          });
          $('#closeAddUserModal').on('click', function() {
            $('#addUserModal').addClass('hidden');
          });
          $('#addUserForm').on('submit', function(e) {
            e.preventDefault();
            const formData = $(this).serialize();
            $.ajax({
              url: '/admin/create-user',
              method: 'POST',
              data: formData,
              success: function(res) {
                if (res.success) {
                  $('#addUserError').addClass('hidden');
                  $('#addUserModal').addClass('hidden');
                  window.location.reload();
                } else {
                  $('#addUserError').removeClass('hidden').text(res.error || 'حدث خطأ أثناء الإضافة');
                }
              },
              error: function(xhr) {
                $('#addUserError').removeClass('hidden').text(xhr.responseJSON?.error || 'حدث خطأ أثناء الإضافة');
              }
            });
          });

            $.ajax({
                url: '/js/ar.json',
                dataType: 'json',
                success: function(lang) {
                    var table = $('#artisanTable').DataTable({
                        language: lang,
                        ajax: {
                            url: '/admin/artisan-list/data',
                            dataSrc: ''
                        },
                        columns: [
                            { 
                                data: null,
                                render: function(data, type, row, meta) {
                                    return `<span class="font-semibold text-slate-600">${meta.row + 1}</span>`;
                                }
                            },
                            { 
                                data: "nom",
                                render: function(data, type, row) {
                                    return `<div class="font-medium text-slate-800">${data || ''}</div>`;
                                }
                            },
                            { 
                                data: "email",
                                render: function(data, type, row) {
                                    return `<div class="text-slate-600">${data || ''}</div>`;
                                }
                            },
                            { 
                                data: "telephone",
                                render: function(data, type, row) {
                                    return `<div class="text-slate-600">${data || 'غير متوفر'}</div>`;
                                }
                            },
                            { 
                                data: "adresse",
                                render: function(data, type, row) {
                                    return `<div class="text-slate-600">${data || 'غير متوفر'}</div>`;
                                }
                            },
                            {
                                data: null,
                                render: function(data, type, row) {
                                    return `
                                        <div class="flex justify-end gap-3">
                                            <button onclick="viewArtisan('${row.id}')" 
                                                class="bg-blue-50 hover:bg-blue-100 text-blue-600 px-3 py-1 rounded-md transition-colors duration-200">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button onclick="deleteArtisan('${row.id}')" 
                                                class="bg-red-50 hover:bg-red-100 text-red-600 px-3 py-1 rounded-md transition-colors duration-200">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    `;
                                }
                            }
                        ],
                        responsive: true,
                        order: [[0, 'asc']],
                        pageLength: 10
                    });
                }
            });

            function viewArtisan(id) {
                window.location.href = `/admin/artisan/${id}`;
            }

            function deleteArtisan(id) {
                if (confirm('هل أنت متأكد من حذف هذا الحرفي؟')) {
                    fetch(`/admin/artisan/${id}`, {
                        method: 'DELETE'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            $('#artisanTable').DataTable().ajax.reload();
                        }
                    })
                    .catch(error => console.error('Error:', error));
                }
            }

            // Reviews modal functions
            function showReviews(reviews, artisanName) {
                const reviewsList = document.getElementById('reviewsList');
                reviewsList.innerHTML = '';
                
                if (reviews && reviews.length > 0) {
                    reviews.forEach(review => {
                        const date = new Date(review.created_at).toLocaleDateString('ar-TN');
                        const stars = getStarsHtml(review.rating);
                        
                        reviewsList.innerHTML += `
                            <div class="border-b border-slate-200 pb-4">
                                <div class="flex justify-between items-start mb-2">
                                    <div>
                                        <div class="font-medium text-slate-800">${review.user_name}</div>
                                        <div class="text-sm text-slate-500">${date}</div>
                                    </div>
                                    <div class="flex gap-1 text-yellow-500">
                                        ${stars}
                                    </div>
                                </div>
                                <p class="text-slate-600">${review.review_text || 'لا يوجد تعليق'}</p>
                            </div>
                        `;
                    });
                } else {
                    reviewsList.innerHTML = '<p class="text-center text-slate-500">لا توجد تقييمات بعد</p>';
                }
                
                document.getElementById('reviewsModal').classList.remove('hidden');
            }

            function getStarsHtml(rating) {
                const fullStars = Math.floor(rating);
                const hasHalfStar = rating % 1 >= 0.5;
                let stars = '';
                
                // Add full stars
                for (let i = 0; i < fullStars; i++) {
                    stars += '<i class="fas fa-star"></i>';
                }
                
                // Add half star if needed
                if (hasHalfStar) {
                    stars += '<i class="fas fa-star-half-alt"></i>';
                }
                
                // Add empty stars
                const emptyStars = 5 - Math.ceil(rating);
                for (let i = 0; i < emptyStars; i++) {
                    stars += '<i class="far fa-star"></i>';
                }
                
                return stars;
            }

            // Close reviews modal
            document.getElementById('closeReviewsModal').addEventListener('click', function() {
                document.getElementById('reviewsModal').classList.add('hidden');
            });
        });
    </script>
</body>
</html>